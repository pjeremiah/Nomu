{
  "name": "nomu-webapp",
  "version": "1.0.0",
  "description": "Nomu Coffee Shop Web Application",
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm start",
    "client": "cd website && npm start",
    "server-dev": "cd server && npm run dev",
    "client-dev": "cd website && npm start",
    "mobile": "cd server && npm run mobile",
    "install-all": "npm install && cd server && npm install && cd ../website && npm install",
    "build": "cd website && npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "bootstrap": "^5.3.6",
    "gridfs-stream": "^1.1.1",
    "multer-gridfs-storage": "^5.0.2",
    "react-bootstrap": "^2.10.10",
    "react-icons": "^5.5.0"
  }
}
